#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int number;
	char material;
	int gorizontalnaya_verticalnaya;
	int lenght;
	int i = 1;
	cout << "[ + ] Программа - “Геометрические фигуры”" << endl << endl << "[ 1 ] Линия" << endl << "[ + ] Выберите фигуру: ";
	cin >> number;
	cout << endl << "[ + ] Фигура: “Линия”" << endl << endl << "[ 1 ] Горизонтальная" << endl << "[ 2 ] Вертикальная" << endl << "[ + ] Выберите тип: ";
	cin >> gorizontalnaya_verticalnaya;
	cout << "[ + ] Длина линии: ";
	cin >> lenght;
	cout << "[ + ] Текстура линии: ";
	cin >> material;
	cout << endl;
	if (gorizontalnaya_verticalnaya == 1)
	{
		while (i <= lenght)
		{
			cout << material;
			i = i + 1;
		}
	}
	else if (gorizontalnaya_verticalnaya == 2)
	{
		while (i <= lenght)
		{
			cout << material << endl;
			i = i + 1;
		}
	}
	cout << endl;
	
	return 0;
}
